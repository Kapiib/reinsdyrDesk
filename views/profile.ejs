<!DOCTYPE html>
<html lang="en">
    <%- include('partials/head') %>
<body>
    <%- include('partials/navbar') %>

    <h1>Welcome to your profile: <%= user.epost %></h1>

    <% if (error) { %>
        <div class="error-message" style="color: red; padding: 10px; margin-bottom: 20px;">
            <%= error %>
        </div>
    <% } %>

    <h2>Mine Flokker</h2>
    <%- include('partials/flokkerList', { flokker: flokker, showEier: false }) %>

    <div class="profile-buttons">
    
    <a href="/api/nyFlokk" class="button">Lage Flokk</a>

    <% if (flokker && flokker.length > 0) { %>
        <a href="/api/add-reinsdyr" class="button">Legg til Reinsdyr</a>
    <% } %>

    <a href="/api/beiteomrade" class="button">Knyte Flokk til Beiteomrade</a>

    </div>

</body>
</html>